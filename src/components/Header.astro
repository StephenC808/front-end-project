---
// Access passed-in component props, like `<X title="Hello, World" />`
const { title } = Astro.props;
---
<!-- Your template here! -->

<header class="main-header">
  <!--Navbar-->
  <nav class="navbar navbar-expand-lg navbar-dark p-2">  <!--style="background-color: #487a0f; -->
    <div class="container-fluid">
      <!--<a class="navbar-brand" href="/">Astro, Booststrap Demo</a> -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/front-end-project">Home</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Ireland Weather API
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/front-end-project/Ulster">Ulster</a></li>
              <li><a class="dropdown-item" href="/front-end-project/Munster">Munster</a></li>
              <li><a class="dropdown-item" href="/front-end-project/Leinster">Leinster</a></li>
              <li><a class="dropdown-item" href="/front-end-project/Connacht">Connacht</a></li>

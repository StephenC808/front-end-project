---
import Banner from '../components/Banner.astro';
import CardContainer from '../components/CardContainer.astro';
import Card4Col from '../components/Card4Col.astro';
import Card4Col4Link from '../components/Card4Col4Link.astro';
import SiteLayout from '../layouts/SiteLayout.astro';
import UserCard from '../components/UserCard.svelte';

---

<SiteLayout title="Astro, Swelte, Bootstrap Demo">
	<Banner imageURL="/images/banner.jpg" />
	<CardContainer>
		<Card4Col4Link
			imgSrc="https://mdbcdn.b-cdn.net/img/new/standard/nature/111.webp"
			imgAlt="Ireland Weather API"
			title="Ireland Weather API"
			body="Weather dashboard for the counties in each of the 4 provinces of Ireland"
			href="/front-end-project/Ulster"
			href2="/front-end-project/Munster"
			href3="/front-end-project/Leinster"
			href4="/front-end-project/Connacht"
		/>
		<Card4Col
			imgSrc="/front-end-project/images/graphthumb.jpg"
			imgAlt="Historic data"
			title="Historic data"
			body="View hourly or daily graphs of temperature for a chosen location"
			href="/front-end-project/historic-data"
		/>
		<Card4Col
			imgSrc="https://mdbcdn.b-cdn.net/img/new/standard/nature/120.webp"
			imgAlt="Search Weather"
			title="Search Weather"
			body="Search detailed current weather conditions for a chosen location"
			href="/front-end-project/search-weather"
		/>
	</CardContainer>

</SiteLayout>

